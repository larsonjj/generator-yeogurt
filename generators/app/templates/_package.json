{
  "name": "<%= projectName %>",
  "version": "0.0.1",
  "dependencies": {
    "jquery": "~3.1.1",
    "normalize.css": "~5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "7.4.4",
    "babelify": "~10.0.0",
    "babel-eslint": "~9.0.0",
    "lodash": "~4.17.4",
    "foldero": "~0.1.1",
    "minimist": "~1.2.0",
    "rimraf": "~2.6.1",
    "del": "~2.2.2",
    "gulp": "~4.0.2",
    "gulp-changed": "~4.0.0",
    "gulp-cssnano": "~2.1.3",
    "gulp-data": "~1.3.1",
    "gulp-eslint": "~6.0.0",
    "gulp-htmlmin": "~5.0.1",
    "gulp-if": "~2.0.2",
    "gulp-imagemin": "~6.0.0",
    "gulp-load-plugins": "~2.0.0",
    "gulp-notify": "~3.2.0",
    "gulp-plumber": "~1.2.1",
    "gulp-postcss": "~8.0.0",
    "gulp-rename": "~1.4.0",
    "gulp-sourcemaps": "~2.6.5",
    "gulp-util": "~3.0.8",
    "gulp-uglify": "~3.0.2",<% if (cssOption === 'sass') { %>
    "gulp-sass": "~4.0.2",<% } %><% if (cssOption === 'less') { %>
    "gulp-less": "~4.0.1",<% } %><% if (cssOption === 'stylus') { %>
    "gulp-stylus": "~2.7.0",<% } %><% if (htmlOption === 'jade') { %>
    "gulp-jade": "~1.1.0",
    "jade": "~1.11.0",<% } %><% if (htmlOption === 'nunjucks') { %>
    "acorn": "6.2.0",
    "nunjucks": "~3.2.0",
    "gulp-nunjucks-html": "~2.0.0",<% } %>
    "vinyl-buffer": "~1.0.1",
    "vinyl-source-stream": "~2.0.0",
    "browser-sync": "~2.18.0",
    "autoprefixer": "~6.7.5",
    "envify": "~4.0.0",
    "imagemin-svgo": "~5.2.0",
    "imagemin-pngquant": "~5.0.0",
    "js-yaml": "~3.8.1",
    "watchify": "~3.9.0 ",
    "browserify" : "~14.1.0"<% if (testFramework !== 'none') { %>,
    "karma": "~1.5.0",
    "karma-browserify": "~5.1.1",
    "karma-phantomjs-launcher": "~1.0.2"<% if (testFramework === 'jasmine') { %>,
    "karma-jasmine": "~1.1.0",
    "jasmine-core": "2.5.2"<% } else if (testFramework === 'mocha') { %>,
    "karma-chai": "~0.1.0",
    "karma-mocha": "~1.3.0",
    "mocha": "~3.2.0",
    "chai": "~3.5.0"<% } %><% } %>
  },
  "scripts": {
    "clean-deps": "rimraf node_modules",
    "clean": "gulp clean",
    "lint": "gulp eslint",
    "test": "gulp test",
    "serve": "NODE_ENV=development gulp serve",
    "serve:prod": "NODE_ENV=production gulp serve --production",
    "build": "NODE_ENV=production gulp --production"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "//": "CUSTOM CONFIGURATION",
  "config": {
    "//": "Local Server Settings",
    "host": "127.0.0.1",
    "port": "3000",
    "baseUrl": "./",
    "//": "Gulp Task Directories",
    "//": "NOTE: folders prefixed with an underscore (_) will have it removed when moved to build target (ex: src/_images -> build/images)",
    "//": "NOTE: folders NOT prefixed with underscore (_) will be copied to build target 1 to 1 (ex: src/fonts -> build/fonts)",
    "directories": {
      "source": "src",
      "destination": "build",
      "temporary": "tmp",
      "//": "Directories relative to `source` directory",
      "modules": "_modules",
      "layouts": "_layouts",
      "images": "_images",
      "styles": "_styles",
      "scripts": "_scripts",
      "data": "_data"
    },
    "//": "Entry files",
    "entries": {
      "js": "main**.js"<% if (cssOption === 'sass') { %>,
      "css": "main**.{sass,scss}"<% } else if (cssOption === 'less') { %>,
      "css": "main**.less"<% } else if (cssOption === 'stylus') { %>,
      "css": "main**.styl"<% } %>
    }
  }
}
