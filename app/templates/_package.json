{
  "name": "<%= _.slugify(projectName) %>",
  "version": "0.0.1",
  "dependencies": {
    "jquery": "~2.1.3",
    "normalize.css": "~3.0.1"
  },
  "devDependencies": {<% if (jsPreprocessor === 'es6') { %>
    "babelify": "~6.0.2",
    "babel-core": "~5.6.15",
    "babel-eslint": "~4.0.0",<% } %>
    "lodash": "~3.2.0",
    "foldero": "~0.1.1",
    "minimist": "~1.1.1",
    "rimraf": "~2.2.0",
    "wrench": "~1.5.8",
    "gulp-plumber": "~1.0.1",
    "gulp-changed": "~1.2.1",
    "gulp-rename": "~1.2.2",
    "gulp-uglify": "~1.2.0",
    "del": "~1.2.0",
    "gulp-if": "~1.2.5",
    "glob": "~5.0.10",
    "gulp-data": "~1.2.0",
    "gulp-sourcemaps": "~1.5.2",
    "gulp-load-plugins": "~0.10.0",
    "vinyl-source-stream": "~1.1.0",
    "vinyl-buffer": "~1.0.0",
    "gulp-util": "~3.0.5",
    "gulp": "~3.9.0",
    "browser-sync": "~2.7.12",<% if (htmlOption === 'jade') { %>
    "gulp-jade": "~1.0.1",
    "jade": "~1.11.0",<% } %><% if (htmlOption === 'nunjucks') { %>
    "nunjucks": "~1.3.4",
    "gulp-nunjucks-html": "~1.2.2",<% } %>
    "gulp-postcss": "~5.1.8",
    "autoprefixer-core": "~5.2.0",
    "gulp-htmlmin": "~1.1.3",
    "envify": "~3.4.0",
    "gulp-imagemin": "~2.2.1",
    "imagemin-svgo": "~4.0.0",
    "imagemin-pngquant": "~4.0.0",
    "gulp-eslint": "~0.14.0",<% if (cssOption === 'sass') { %>
    "gulp-sass": "~2.0.1",<% } %><% if (cssOption === 'less') { %>
    "gulp-less": "~3.0.3",<% } %><% if (cssOption === 'stylus') { %>
    "gulp-stylus": "~2.0.5",<% } %>
    "gulp-newer": "~0.5.1",
    "watchify": "~3.3.0 ",
    "browserify" : "~10.0.0"<% if (testFramework !== 'none') { %>,
    "karma": "~0.12.21",
    "karma-browserify": "~4.2.1",
    "karma-phantomjs-launcher": "~0.1.2"<% if (testFramework === 'jasmine') { %>,
    "karma-jasmine": "~0.2.0"<% } else if (testFramework === 'mocha') { %>,
    "karma-chai": "~0.1.0",
    "karma-mocha": "~0.1.3",
    "mocha": "*",
    "chai": "*"<% } %><% } %>
  },
  "scripts": {
    "clean-deps": "rimraf node_modules"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "//": "CUSTOM CONFIGURATION",
  "config": {
    "//": "Local Server Settings",
    "host": "127.0.0.1",
    "port": "3000",
    "baseUrl": "./",
    "//": "Gulp Task Directories",
    "//": "NOTE: folders prefixed with an underscore (_) will have it removed when moved to build target (ex: src/_images -> build/images)",
    "//": "NOTE: folders NOT prefixed with underscore (_) will be copied to build target 1 to 1 (ex: src/fonts -> build/fonts)",
    "directories": {
      "source": "src",
      "destination": "build",
      "temporary": "tmp",
      "//": "Directories relative to `source` directory",
      "modules": "_modules",
      "layouts": "_layouts",
      "images": "_images",
      "styles": "_styles",
      "scripts": "_scripts",
      "data": "_data"
    },
    "//": "Entry files",
    "entries": {
      "js": "main**.js"<% if (cssOption === 'sass') { %>,
      "css": "main**.{sass,scss}"<% } else if (cssOption === 'less') { %>,
      "css": "main**.less"<% } else if (cssOption === 'stylus') { %>,
      "css": "main**.styl"<% } %>
    }
  }
}
