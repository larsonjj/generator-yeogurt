{
  "name": "<%= _.slugify(projectName) %>",
  "version": "0.0.1",
  "dependencies": {
    "jquery": "~2.2.0",
    "normalize.css": "~3.0.3"
  },
  "devDependencies": {<% if (jsPreprocessor === 'es6') { %>
    "babelify": "~7.2.0",
    "babel-core": "~6.4.0",
    "babel-preset-es2015": "~6.3.13",
    "babel-plugin-add-module-exports": "~0.1.2",
    "babel-eslint": "~4.1.3",<% } %>
    "lodash": "~4.0.0",
    "foldero": "~0.1.1",
    "minimist": "~1.2.0",
    "rimraf": "~2.5.0",
    "wrench": "~1.5.8",
    "gulp-plumber": "~1.0.1",
    "gulp-changed": "~1.3.0",
    "gulp-rename": "~1.2.2",
    "gulp-uglify": "~1.5.1",
    "del": "~2.2.0",
    "gulp-if": "~2.0.0",
    "glob": "~6.0.4",
    "gulp-data": "~1.2.1",
    "gulp-sourcemaps": "~1.6.0",
    "gulp-load-plugins": "~1.2.0",
    "gulp-cssnano": "~2.1.0",
    "vinyl-source-stream": "~1.1.0",
    "vinyl-buffer": "~1.0.0",
    "gulp-util": "~3.0.7",
    "gulp": "~3.9.0",
    "browser-sync": "~2.11.1",<% if (htmlOption === 'jade') { %>
    "gulp-jade": "~1.1.0",
    "jade": "~1.11.0",<% } %><% if (htmlOption === 'nunjucks') { %>
    "nunjucks": "~2.3.0",
    "gulp-nunjucks-html": "~2.0.0",<% } %><% if (htmlOption === 'twig') { %>
    "twig": "^0.8.9",
    "gulp-twig": "~0.5.0",<% } %>
    "gulp-postcss": "~6.0.1",
    "autoprefixer": "~6.3.1",
    "gulp-htmlmin": "~1.3.0",
    "envify": "~3.4.0",
    "gulp-imagemin": "~2.4.0",
    "imagemin-svgo": "~4.2.0",
    "imagemin-pngquant": "~4.2.0",
    "gulp-eslint": "~1.1.1",<% if (cssOption === 'sass') { %>
    "gulp-sass": "~2.1.1",<% } %><% if (cssOption === 'less') { %>
    "gulp-less": "~3.0.5",<% } %><% if (cssOption === 'stylus') { %>
    "gulp-stylus": "~2.2.0",<% } %>
    "gulp-newer": "~1.1.0",
    "js-yaml": "~3.5.2",
    "watchify": "~3.7.0 ",
    "browserify" : "~13.0.0"<% if (testFramework !== 'none') { %>,
    "karma": "~0.13.19",
    "karma-browserify": "~4.4.2",
    "karma-phantomjs-launcher": "~0.2.3",
    "phantomjs": "~1.9.19"<% if (testFramework === 'jasmine') { %>,
    "karma-jasmine": "~0.3.6",
    "jasmine-core": "2.4.1"<% } else if (testFramework === 'mocha') { %>,
    "karma-chai": "~0.1.0",
    "karma-mocha": "~0.2.1",
    "mocha": "~2.3.4",
    "chai": "~3.4.1"<% } %><% } %>
  },
  "scripts": {
    "clean-deps": "rimraf node_modules"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "//": "CUSTOM CONFIGURATION",
  "config": {
    "//": "Local Server Settings",
    "host": "127.0.0.1",
    "port": "3000",
    "baseUrl": "./",
    "//": "Gulp Task Directories",
    "//": "NOTE: folders prefixed with an underscore (_) will have it removed when moved to build target (ex: src/_images -> build/images)",
    "//": "NOTE: folders NOT prefixed with underscore (_) will be copied to build target 1 to 1 (ex: src/fonts -> build/fonts)",
    "directories": {
      "source": "src",
      "destination": "build",
      "temporary": "tmp",
      "//": "Directories relative to `source` directory",
      "modules": "_modules",
      "layouts": "_layouts",
      "images": "_images",
      "styles": "_styles",
      "scripts": "_scripts",
      "data": "_data"
    },
    "//": "Entry files",
    "entries": {
      "js": "main**.js"<% if (cssOption === 'sass') { %>,
      "css": "main**.{sass,scss}"<% } else if (cssOption === 'less') { %>,
      "css": "main**.less"<% } else if (cssOption === 'stylus') { %>,
      "css": "main**.styl"<% } %>
    }
  }
}
